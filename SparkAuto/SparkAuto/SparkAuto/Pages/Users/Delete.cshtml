@page
@model SparkAuto.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2 class="text-info pt-2 pb-3">Delete Customer</h2>

<div class="row backgroundWhite border">
    <div class="col-md-8">
        <form method="post">
            <input type="hidden" asp-for="ApplicationUser.Id" />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="ApplicationUser.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationUser.Name" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="ApplicationUser.Email"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationUser.Email" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="ApplicationUser.PhoneNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationUser.PhoneNumber" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="ApplicationUser.Address"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationUser.Address" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="ApplicationUser.Address" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="ApplicationUser.City"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationUser.City" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="ApplicationUser.City" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="ApplicationUser.PostalCode"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationUser.PostalCode" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="ApplicationUser.PostalCode" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
